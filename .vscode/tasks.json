{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Trading System",
            "type": "shell",
            "command": "mvn",
            "args": ["clean", "package", "-DskipTests"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": ["$java"]
        },
        {
            "label": "Build with Tests",
            "type": "shell",
            "command": "mvn",
            "args": ["clean", "package"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": ["$java"]
        },
        {
            "label": "Run Trading System",
            "type": "shell",
            "command": "mvn",
            "args": ["spring-boot:run"],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "isBackground": true,
            "problemMatcher": ["$java"]
        },
        {
            "label": "Build Docker Image",
            "type": "shell",
            "command": "docker",
            "args": ["build", "-t", "trading-system:latest", "."],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run Docker Container",
            "type": "shell",
            "command": "docker",
            "args": ["run", "-p", "8080:8080", "trading-system:latest"],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "isBackground": true
        }
    ]
}
